<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- First column -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/textuser2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User 2"
            android:gravity="center" />

    </LinearLayout>

    <!-- Second column -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/textUser1Score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Score 1"
            android:gravity="center" />

    </LinearLayout>

    <!-- Third column -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/textUser2Score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Score 2"
            android:gravity="center" />

    </LinearLayout>

</LinearLayout>
